// procedimiento para mostrar
void MOSTRAR (short Vector[], short N)
{
    // variables
    short i;

    for (i = 1; i <= N; i ++)
    {
        cout << Vector [i] << " ";
    }
} 
// solo se cambia N por el tamaÃ±o del vector y Vector por otro vector
// muestra los resultados hacia un lado, si se quieren hacia abajo se pone endl en vez de " "
